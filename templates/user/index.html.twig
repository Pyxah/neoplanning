{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Isadmin</th>
                <th>Level</th>
                <th>Visible</th>
                <th>Acctime</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Titre</th>
                <th>Email</th>
                <th>Remark</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.uuid }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isadmin }}</td>
                <td>{{ user.level }}</td>
                <td>{{ user.visible }}</td>
                <td>{{ user.acctime ? user.acctime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.titre }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.remark }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
