{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
        <!--<tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>-->
            <tr>
                <th>Utilisateur</th>
                <td>{{ user.uuid }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        <!--<tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>-->
            <tr>
                <th>Admin?</th>
                <td>{{ user.isadmin }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ user.level }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ user.visible }}</td>
            </tr>
            <tr>
                <th>Dernière connexion</th>
                <td>{{ user.acctime ? user.acctime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ user.titre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Remarque</th>
                <td>{{ user.remark }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Retour à la liste</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
